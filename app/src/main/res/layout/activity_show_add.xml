<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowAdd"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:text="ADD DRUG"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:text="A11.2017.10791"
        android:background="@color/colorMist"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Kode" />

        <EditText
            android:id="@+id/editId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="10">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nama Obat" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="20" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Harga" />

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Jenis Kemasan" />

        <EditText
            android:id="@+id/editPack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/backPhase"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/i_prev"
                android:layout_width="91dp"
                android:layout_height="70dp"
                android:background="@drawable/box"/>

            <View
                android:layout_width="30dp"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/addButton"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="91dp"
                android:layout_height="70dp"
                android:background="@drawable/box"
                android:src="@drawable/i_add"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>